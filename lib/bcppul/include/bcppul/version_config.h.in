// include/bcppul/version_config.h.in
#pragma once

#define BCPPUL_VERSION_MAJOR @BCPPUL_VERSION_MAJOR@
#define BCPPUL_VERSION_MINOR @BCPPUL_VERSION_MINOR@
#define BCPPUL_VERSION_PATCH @BCPPUL_VERSION_PATCH@

#define BCPPUL_VERSION_STRING "@BCPPUL_VERSION_MAJOR@.@BCPPUL_VERSION_MINOR@.@BCPPUL_VERSION_PATCH@"

#define BCPPUL_VERSION_CHECK(major, minor, patch) \
    (BCPPUL_VERSION_MAJOR > (major) || \
     (BCPPUL_VERSION_MAJOR == (major) && BCPPUL_VERSION_MINOR > (minor)) || \
     (BCPPUL_VERSION_MAJOR == (major) && BCPPUL_VERSION_MINOR == (minor) && BCPPUL_VERSION_PATCH >= (patch)))